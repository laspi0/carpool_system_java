<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.groupeisi.rent.controllers.user.LoginController"
      spacing="10" alignment="CENTER">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="Connexion" styleClass="title"/>

    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Mot de passe" />

    <Button text="Se connecter" onAction="#handleLogin" styleClass="submit-button"/>

    <Hyperlink fx:id="registerLink" text="Vous n'avez pas encore de compte ? Inscrivez-vous ici" styleClass="hyperlink"/>
</VBox>
