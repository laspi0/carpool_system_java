<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.groupeisi.rent.controllers.user.ManageUserController"
      spacing="10" alignment="CENTER" stylesheets="@styles.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestion des Utilisateurs" styleClass="title"/>

    <TableView fx:id="userTableView" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="firstNameColumn" text="Prénom" prefWidth="100"/>
            <TableColumn fx:id="lastNameColumn" text="Nom" prefWidth="100"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="150"/>
            <TableColumn fx:id="roleColumn" text="Rôle" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox fx:id="buttonContainer" spacing="10" alignment="CENTER"/>

</VBox>